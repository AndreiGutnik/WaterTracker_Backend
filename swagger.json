        "security": [{ "Bearer": [] }],

        "requestBody": {
          "description": "Object for editing",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EditWaterRequest"
              }
            }
          }
        },

        "responses": {
          "200": {
