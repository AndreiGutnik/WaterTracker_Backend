    "/api/waternotes/{id} ": {
      "delete": {
        "tags": ["WaterNotes"],
        "summary": "Deleting a record of consumed water",

        "parameters": [
          {
            "in": "path",
            "name": "id"
          }
        ],
        "security": [{ "Bearer": [] }],

        "responses": {
          "200": {
