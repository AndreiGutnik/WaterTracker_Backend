      "MonthResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "date": {
              "type": "string",
              "description": "Time of water consumption",
              "format": "date-time"
            },
            "amountWater": {
              "type": "number",
              "description": "Amount of water consumed",
              "example": 250
            }
          }
        }
      }
    },

    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
